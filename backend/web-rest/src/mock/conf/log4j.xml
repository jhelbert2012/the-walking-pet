<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration>

	<!-- APPENDERS -->
	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="|%d{ISO8601}|%p|%C{1}|%X{sessionID}|%m|%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="INFO" />
			<param name="LevelMax" value="FATAL" />
		</filter>
	</appender>

	<appender name="MAIN-HOURLY" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${var.logging.dir}/zebra-api/web-rest-main.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd-HH" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="|%d{ISO8601}|%p|%C{1}|%X{sessionID}|%m|%n" />
		</layout>
	</appender>

	<appender name="REQUEST-HOURLY" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${var.logging.dir}/web-rest-request.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd-HH" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="|%d{ISO8601}|%p|%C{1}|%X{sessionID}|%m|%n" />
		</layout>
	</appender>

	<appender name="SQL-HOURLY" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="${var.logging.dir}/zebra-api/web-rest-sql.log" />
		<param name="MaxFileSize" value="5120KB" />
		<param name="MaxBackupIndex" value="0" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="|%d{ISO8601}|%p|%C{1}|%X{sessionID}|%m|%n" />
		</layout>
	</appender>

	<appender name="DB-HOURLY" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="${var.logging.dir}/zebra-api/web-rest-db.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd-HH" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="|%d{ISO8601}|%p|%C{1}|%X{sessionID}|%m|%n" />
		</layout>
	</appender>

	<!-- SPECIFIC LOGGING CONFIGURATION -->

	<!-- MAIN LOGGING -->
	<logger name="com.sanpei">
		<level value="DEBUG" />
		<appender-ref ref="MAIN-HOURLY" />
	</logger>

	<logger name="org.springframework">
		<level value="INFO" />
		<appender-ref ref="MAIN-HOURLY" />
	</logger>

	<logger name="org.apache">
		<level value="WARN" />
		<appender-ref ref="MAIN-HOURLY" />
	</logger>

	<logger name="org.apache.wicket">
		<level value="INFO" />
	</logger>

	<logger name="org.apache.wicket.resource.PropertiesFactory">
		<level value="WARN" />
	</logger>

	<logger name="sun">
		<level value="NONE" />
	</logger>

	<!-- DB LOGGING -->
	<logger name="org.hibernate">
		<level value="INFO" />
		<appender-ref ref="DB-HOURLY" />
	</logger>

	<logger name="net.sf.ehcache">
		<level value="INFO" />
		<appender-ref ref="DB-HOURLY" />
	</logger>

	<logger name="com.mchange">
		<level value="INFO" />
		<appender-ref ref="DB-HOURLY" />
	</logger>

	<!-- SQL LOGGING -->
	<logger name="org.hibernate.SQL" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="SQL-HOURLY" />
	</logger>

	<logger name="org.hibernate.type" additivity="false">
		<level value="TRACE" />
		<appender-ref ref="SQL-HOURLY" />
	</logger>

	<!-- REQUEST LOGGING -->
	<logger name="org.apache.wicket.protocol.http.RequestLogger"
		additivity="false">
		<level value="INFO" />
		<appender-ref ref="REQUEST-HOURLY" />
	</logger>

	<!-- MONITORING -->
	<logger name="net.bull.javamelody" additivity="false">
		<level value="INFO" />
		<appender-ref ref="MAIN-HOURLY" />
	</logger>

	<!-- DEFAULT LOGGING LEVEL -->
	<root>
		<level value="ALL" />
		<!--appender-ref ref="STDOUT" / -->
	</root>

</log4j:configuration>