    <distributionManagement>
        <repository>
            <id>deployment</id>
            <name>Internal Releases</name>
            <url>http://45.55.229.227/artifacts/content/repositories/thewalkingpets-releases/</url>
        </repository>
        <snapshotRepository>
            <id>deployment</id>
