    <build>
        <plugins>
            <!-- VERSIONING PLUGIN -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>versions-maven-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <generateBackupPoms>false</generateBackupPoms>
                </configuration>
            </plugin>
            <!-- GIT TAGGING PLUGIN -->
            <plugin>
                <artifactId>maven-scm-plugin</artifactId>
                <version>1.8.1</version>
                <configuration>
                    <tag>v${project.version}</tag>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <!-- ============ LOCAL DEVELOPMENT PROFILE ============= -->
        <profile>
            <id>local</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <var.jetty.httpPort>9091</var.jetty.httpPort>
                <var.jetty.httpsPort>9092</var.jetty.httpsPort>
                <var.server.keystore.dir>${user.home}/development</var.server.keystore.dir>
                <var.hibernate.connection.driver_class>com.mysql.jdbc.Driver</var.hibernate.connection.driver_class>
                <var.hibernate.connection.url>jdbc:mysql://localhost/thewalkingpets</var.hibernate.connection.url>
                <var.hibernate.connection.url_nodb>jdbc:mysql://localhost</var.hibernate.connection.url_nodb>
                <var.hibernate.connection.username>petsadmin</var.hibernate.connection.username>
                <var.hibernate.connection.password>w4lk1ngP3t5</var.hibernate.connection.password>
                <var.hibernate.dialect>org.hibernate.dialect.MySQL5InnoDBDialect</var.hibernate.dialect>
                <var.hibernate.show_sql>true</var.hibernate.show_sql>
                <var.logging.dir>${user.home}/development/logs</var.logging.dir>
                <compiler.debug.mode>true</compiler.debug.mode>
                <compiler.code.optimization>false</compiler.code.optimization>
                <var.flyway.baseDir>sql/dev</var.flyway.baseDir>
                <var.flyway.sqlMigrationPrefix>D</var.flyway.sqlMigrationPrefix>
            </properties>
        </profile>
    </profiles>

</project>
